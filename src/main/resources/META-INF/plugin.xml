<idea-plugin>
    <id>com.code-inspector.plugins.intellij-plugin</id>
    <name>Code Inspector</name>
    <vendor email="support@code-inspector.com" url="http://www.code-inspector.com">Code Inspector</vendor>

    <description>
        <![CDATA[
            <p>
                Code Inspector is a code analysis platform that lets you analyze code for 12+ languages:
                Apex, C, C++, Dart, Docker, Go, Java, Javascript, Kotlin, PHP, Python, Ruby, Scala,
                shellscript, Terraform, Typescript, YAML.

                One single plugin to check all your code in all languages!
            </p>

            <br />

            <strong>
                In order to use this plugin, you must create an account on <a href="https://frontend.code-inspector.com">
                Code Inspector</a> and define your API keys in the plugin preferences.
            </strong>

            <br />

            <p>
                <a href="https://www.code-inspetor.com">Code Inspector</a> analyzes your code and helps you improve
                through analysis in IntelliJ or in your code reviews on GitHub, GitLab or Bitbucket. No need to
                configure and maintain the configuration for dozens of static analyzer, everything is available
                and configurable in few clicks!
            </p>

            <br />

            <p>
            The platform supports more than 10+ languages (Java, C, C++, Javascript, Python, Ruby and many more!) and reports:
            </p>
            <ul>
                <li><strong>Code Violations</strong> such as security issues or vulnerabilities or lack of documentation</li>
                <li><strong>Complex Functions</strong>: functions with high cyclomatic complexity</li>
                <li><strong>Long Functions</strong>: functions that are too long to fit on your screen (threshold can be changed)</li>
                <li><strong>Code Duplicates</strong>: block of code duplicated in your product</li>
            </ul>

            <br />

            <p>
            The analysis engine can be configured for each project through the web platform.
            </p>



            <strong>This plugin is actually in a BETA version</strong>, please send us feedback
            <a href="mailto:support@code-inspector.com">support@code-inspector.com</a>.

            <br />

            <p>
                More information
            </p>
            <ul>
                <li><a href="https://www.code-inspector.com">Code Inspector</a></li>
                <li><a href="https://doc.code-inspector.com">Code Inspector Documentation</a></li>
                <li><a href="https://doc.code-inspector.com/docs/integration-jetbrains-idea-intellij">Plugin Configuration</a></li>
            </ul>

            <p>
                Made with ‚ù§ by developers for developers.
            </p>

        ]]>
    </description>

    <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>
    <depends>Git4Idea</depends>

    <extensions defaultExtensionNs="com.intellij">
        <notificationGroup
                id="Code Inspector API"
                displayType="BALLOON"/>

        <applicationService
                serviceInterface="com.code_inspector.plugins.intellij.graphql.CodeInspectorApi"
                serviceImplementation="com.code_inspector.plugins.intellij.graphql.CodeInspectorApiImpl"
                testServiceImplementation="com.code_inspector.plugins.intellij.graphql.CodeInspectorApiTest"
        />

        <applicationService serviceImplementation="com.code_inspector.plugins.intellij.settings.application.AppSettingsState"/>
        <applicationConfigurable
                parentId="tools"
                instance="com.code_inspector.plugins.intellij.settings.application.AppSettingsConfigurable"
                id="com.code_inspector.settings.AppSettingsConfigurable"
                displayName="Code Inspector API"/>
        <projectService serviceImplementation="com.code_inspector.plugins.intellij.settings.project.ProjectSettingsState"/>
        <projectConfigurable
                parentId="tools"
                instance="com.code_inspector.plugins.intellij.settings.project.ProjectSettingsConfigurable"
                id="com.code_inspector.settings.ProjectSettingsConfigurable"
                displayName="Code Inspector Project"/>
        <externalAnnotator
                language="JSON"
                implementationClass="com.code_inspector.plugins.intellij.annotators.CodeInspectorExternalAnnotator"/>
        <externalAnnotator
                language="TEXT"
                implementationClass="com.code_inspector.plugins.intellij.annotators.CodeInspectorExternalAnnotator"/>
        <externalAnnotator
                language="Scala"
                implementationClass="com.code_inspector.plugins.intellij.annotators.CodeInspectorExternalAnnotator"/>
        <externalAnnotator
                language="kotlin"
                implementationClass="com.code_inspector.plugins.intellij.annotators.CodeInspectorExternalAnnotator"/>
        <externalAnnotator
                language="yaml"
                implementationClass="com.code_inspector.plugins.intellij.annotators.CodeInspectorExternalAnnotator"/>
        <externalAnnotator
                language="JSX Harmony"
                implementationClass="com.code_inspector.plugins.intellij.annotators.CodeInspectorExternalAnnotator"/>
        <externalAnnotator
                language="ECMAScript 6"
                implementationClass="com.code_inspector.plugins.intellij.annotators.CodeInspectorExternalAnnotator"/>
        <externalAnnotator
                language="JavaScript"
                implementationClass="com.code_inspector.plugins.intellij.annotators.CodeInspectorExternalAnnotator"/>
        <externalAnnotator
                language="TypeScript"
                implementationClass="com.code_inspector.plugins.intellij.annotators.CodeInspectorExternalAnnotator"/>
        <externalAnnotator
                language="ruby"
                implementationClass="com.code_inspector.plugins.intellij.annotators.CodeInspectorExternalAnnotator"/>
        <externalAnnotator
                language="go"
                implementationClass="com.code_inspector.plugins.intellij.annotators.CodeInspectorExternalAnnotator"/>
        <externalAnnotator
                language="PHP"
                implementationClass="com.code_inspector.plugins.intellij.annotators.CodeInspectorExternalAnnotator"/>
        <externalAnnotator
                language="C"
                implementationClass="com.code_inspector.plugins.intellij.annotators.CodeInspectorExternalAnnotator"/>
        <externalAnnotator
                language="Python"
                implementationClass="com.code_inspector.plugins.intellij.annotators.CodeInspectorExternalAnnotator"/>
        <externalAnnotator
                language="Shell Script"
                implementationClass="com.code_inspector.plugins.intellij.annotators.CodeInspectorExternalAnnotator"/>
        <externalAnnotator
                language="JAVA"
                implementationClass="com.code_inspector.plugins.intellij.annotators.CodeInspectorExternalAnnotator"/>
<!--        <statusBarWidgetFactory implementation="com.code_inspector.plugins.intellij.ui.CodeInspectorStatusBar"/>-->
    </extensions>

    <actions>
        <!-- Add your actions here -->
    </actions>
</idea-plugin>