<idea-plugin>
    <id>io.codiga.plugins.jetbrains-plugin</id>
    <name>Codiga</name>
    <vendor email="support@codiga.io" url="http://www.codiga.io">Codiga</vendor>

    <description>
        <![CDATA[
            <p>
                Codiga is a code analysis platform that lets you analyze code for 12+ languages:
                Apex, C, C++, Dart, Docker, Go, Java, Javascript, Kotlin, PHP, Python, Ruby, Scala,
                shellscript, Terraform, Typescript, YAML.

                One single plugin to check all your code in all languages!
            </p>

            <br />

            <strong>
                In order to use this plugin, you must create an account on <a href="https://frontend.code-inspector.com">
                Codiga</a> and define your API keys in the plugin preferences.
            </strong>

            <br />

            <p>
                <a href="https://www.codiga.io">Codiga</a> analyzes your code and helps you improve
                through analysis in IntelliJ or in your code reviews on GitHub, GitLab or Bitbucket. No need to
                configure and maintain the configuration for dozens of static analyzer, everything is available
                and configurable in few clicks!
            </p>

            <br />

            <p>
            The platform supports more than 10+ languages (Java, C, C++, Javascript, Python, Ruby and many more!) and reports:
            </p>
            <ul>
                <li><strong>Code Violations</strong> such as security issues or vulnerabilities or lack of documentation</li>
                <li><strong>Complex Functions</strong>: functions with high cyclomatic complexity</li>
                <li><strong>Long Functions</strong>: functions that are too long to fit on your screen (threshold can be changed)</li>
                <li><strong>Code Duplicates</strong>: block of code duplicated in your product</li>
            </ul>

            <br />

            <p>
            The analysis engine can be configured for each project through the web platform.
            </p>



            <p>
                More information
            </p>
            <ul>
                <li><a href="https://www.codiga.io">Codiga</a></li>
                <li><a href="https://doc.codiga.io">Codiga Documentation</a></li>
                <li><a href="https://doc.codiga.io/docs/integration-jetbrains">Plugin Configuration</a></li>
            </ul>

            <p>
                Made with ‚ù§ by developers for developers.
            </p>

        ]]>
    </description>

    <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>
    <depends>Git4Idea</depends>

    <extensions defaultExtensionNs="com.intellij">
        <notificationGroup
                id="Codiga API"
                displayType="BALLOON"/>

        <applicationService
                serviceInterface="io.codiga.plugins.jetbrains.graphql.CodigaApi"
                serviceImplementation="io.codiga.plugins.jetbrains.graphql.CodigaApiImpl"
                testServiceImplementation="io.codiga.plugins.jetbrains.graphql.CodigaApiTest"
        />

        <applicationService serviceImplementation="io.codiga.plugins.jetbrains.settings.application.AppSettingsState"/>
        <applicationConfigurable
                parentId="tools"
                instance="io.codiga.plugins.jetbrains.settings.application.AppSettingsConfigurable"
                id="com.code_inspector.settings.AppSettingsConfigurable"
                displayName="Codiga API"/>
        <projectService serviceImplementation="io.codiga.plugins.jetbrains.settings.project.ProjectSettingsState"/>
        <completion.contributor
                implementationClass="io.codiga.plugins.jetbrains.completion.CodigaCompletion"
                language="JAVA"
        />
        <completion.contributor
                implementationClass="io.codiga.plugins.jetbrains.completion.CodigaCompletion"
                language="TEXT"
        />

        <projectConfigurable
                parentId="tools"
                instance="io.codiga.plugins.jetbrains.settings.project.ProjectSettingsConfigurable"
                id="io.codiga.settings.ProjectSettingsConfigurable"
                displayName="Codiga Project"/>
        <externalAnnotator
                language="JSON"
                implementationClass="io.codiga.plugins.jetbrains.annotators.ExternalAnnotator"/>
        <externalAnnotator
                language="Apex"
                implementationClass="io.codiga.plugins.jetbrains.annotators.ExternalAnnotator"/>
        <externalAnnotator
                language="TEXT"
                implementationClass="io.codiga.plugins.jetbrains.annotators.ExternalAnnotator"/>
        <externalAnnotator
                language="Scala"
                implementationClass="io.codiga.plugins.jetbrains.annotators.ExternalAnnotator"/>
        <externalAnnotator
                language="kotlin"
                implementationClass="io.codiga.plugins.jetbrains.annotators.ExternalAnnotator"/>
        <externalAnnotator
                language="yaml"
                implementationClass="io.codiga.plugins.jetbrains.annotators.ExternalAnnotator"/>
        <externalAnnotator
                language="JSX Harmony"
                implementationClass="io.codiga.plugins.jetbrains.annotators.ExternalAnnotator"/>
        <externalAnnotator
                language="ECMAScript 6"
                implementationClass="io.codiga.plugins.jetbrains.annotators.ExternalAnnotator"/>
        <externalAnnotator
                language="JavaScript"
                implementationClass="io.codiga.plugins.jetbrains.annotators.ExternalAnnotator"/>
        <externalAnnotator
                language="TypeScript"
                implementationClass="io.codiga.plugins.jetbrains.annotators.ExternalAnnotator"/>
        <externalAnnotator
                language="ruby"
                implementationClass="io.codiga.plugins.jetbrains.annotators.ExternalAnnotator"/>
        <externalAnnotator
                language="go"
                implementationClass="io.codiga.plugins.jetbrains.annotators.ExternalAnnotator"/>
        <externalAnnotator
                language="PHP"
                implementationClass="io.codiga.plugins.jetbrains.annotators.ExternalAnnotator"/>
        <externalAnnotator
                language="C"
                implementationClass="io.codiga.plugins.jetbrains.annotators.ExternalAnnotator"/>
        <externalAnnotator
                language="Python"
                implementationClass="io.codiga.plugins.jetbrains.annotators.ExternalAnnotator"/>
        <externalAnnotator
                language="Shell Script"
                implementationClass="io.codiga.plugins.jetbrains.annotators.ExternalAnnotator"/>
        <externalAnnotator
                language="JAVA"
                implementationClass="io.codiga.plugins.jetbrains.annotators.ExternalAnnotator"/>
<!--        <statusBarWidgetFactory implementation="com.code_inspector.plugins.intellij.ui.CodeInspectorStatusBar"/>-->
    </extensions>

    <actions>
        <action id="com.code_inspector.plugins.intellij.actions.AssistantUseRecipeAction"
                class="io.codiga.plugins.jetbrains.actions.AssistantUseRecipeAction"
                text="Codiga: Assistant" description="Search for Codiga suggestions"
                icon="CodigaIcons.Codiga_default_icon">
            <add-to-group group-id="ToolsMenu" anchor="first"/>
            <override-text place="MainMenu" text="Codiga Assistant"/>
            <keyboard-shortcut first-keystroke="control alt C" keymap="$default"/>
            <mouse-shortcut keystroke="control button3 doubleClick" keymap="$default"/>
        </action>



        <action id="com.code_inspector.plugins.intellij.actions.AssistantCreateRecipeAction"
                class="io.codiga.plugins.jetbrains.actions.AssistantCreateRecipeAction"
                text="Create Codiga Recipe" description="Use the selected code to create a recipe"
                icon="CodigaIcons.Codiga_default_icon">

            <add-to-group group-id="EditorPopupMenu"  anchor="last"/>
            <override-text place="MainMenu" text="Codiga Assistant"/>
        </action>

    </actions>
</idea-plugin>